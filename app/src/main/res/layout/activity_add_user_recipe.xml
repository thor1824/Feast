<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawLayout_addRecipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".client.internal.controller.AddUserRecipeActivity"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_addRecipe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">


        <LinearLayout
            android:id="@+id/linLayAmount_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"

            >


            <include layout="@layout/toolbar" />


            <ImageView
                android:layout_width="164dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:src="@drawable/camara_icon" />


            <EditText

                android:id="@+id/editName"
                android:layout_width="700px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="80px"
                android:hint="Recipe Name" />

            <EditText
                android:id="@+id/editTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="80px"
                android:hint="Estimated Time In Minutes"
                android:inputType="number" />

            <TextView
                android:id="@+id/textIng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="80px"
                android:text="Ingredients"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/addIngLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linIngContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editIng"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Ingredient" />

                    <EditText
                        android:id="@+id/editIngAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:hint="Amount"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="g"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addIngButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="30px"
                android:layout_marginRight="30px"
                android:src="@drawable/plus_icon"
                app:rippleColor="@color/colorAccent" />

            <Button
                android:id="@+id/submitBt"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/submit_button"
                android:stateListAnimator="@null"
                android:text="Add Recipe" />


        </LinearLayout>


    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>
